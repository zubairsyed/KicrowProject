<%- include('layout/header') %>

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-primary">
                    <h3 class="text-light">Add New Application</h3>
                </div>
                <div class="card-body p-4">
                    <!-- enctype is very important as we are uploading image -->
                <form action="/add" method="post" id="add-App" enctype="multipart/form-data">
                
                    <div class="mb-3">
                        <label for="category">Category</label>
                        <input type="text" name="category" class="form-control form-control-lg" placeholder="Enter Category eg: (Food, UPI Payments, Movies)" required />
                    </div>
                    <div class="mb-3">
                        <label for="Name">Name</label>
                        <input type="text" name="name" class="form-control form-control-lg" placeholder="Enter Name eg: (Zomato, Swiggy, Uber Eats)"
                            required />
                    </div>
                    
                        <div class="mb-3">
                            <label for="tag">Tag</label>
                            <input type="text" name="tag" class="form-control form-control-lg" placeholder="Enter Tag eg:(free, pay-as-you-go, premium)"
                                required />
                        </div>
                        <div class="mb-3">
                            <label for="image" class="form-label">Select App Icon</label> 
                            <input class="form-control form-control-lg" type="file" name="image" required />
                        </div>
                        <div class="mb-3 d-grid">
                            <input type="submit" name="submit" value="Add App" class="btn btn-primary btn-19" />
                        </div>
                </form>
            </div>
        </div>
        </div>
            
    </div>
</div>

<%- include('layout/footer')  %>