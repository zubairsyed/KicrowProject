<%- include('layout/header') %>

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-success">
                    <h3 class="text-light">Edit Application Details (<%= user.name %>)</h3>
                </div>
                <div class="card-body p-4">
                    <!-- enctype is very important as we are uploading image -->
                <form action="/update/<%= user._id %>" method="post" id="add-App" enctype="multipart/form-data">
                
                    <div class="mb-3">
                        <label for="category">Category</label>
                        <input type="text" name="category" class="form-control form-control-lg" placeholder="Enter Category eg: (Food, UPI Payments, Movies)" 
                        value="<%= user.category %>" required />
                    </div>
                    <div class="mb-3">
                        <label for="Name">Name</label>
                        <input type="text" name="name" class="form-control form-control-lg" placeholder="Enter Name eg: (Zomato, Swiggy, Uber Eats)"
                        value="<%= user.name %>"   required />
                    </div>
                    
                        <div class="mb-3">
                            <label for="tag">Tag</label>
                            <input type="text" name="tag" class="form-control form-control-lg" placeholder="Enter Tag eg:(free, pay-as-you-go, premium)"
                            value="<%= user.tag %>"   required />
                        </div>
                        <div class="mb-3">
                            <label for="image" class="form-label">Select App Icon</label> 
                            <input class="form-control form-control-lg" type="file" name="image" required />
                            <img src="/<%= user.image %>" width="100" class="img-thumbnail mt-1">
                        </div>
                        <input type="hidden" name="old-image" value="<%= user.image %>">
                        <div class="mb-3 d-grid">
                            <input type="submit" name="submit" value="Update App" class="btn btn-success btn-19" />
                        </div>
                </form>
            </div>
        </div>
        </div>
            
    </div>
</div>

<%- include('layout/footer')  %>